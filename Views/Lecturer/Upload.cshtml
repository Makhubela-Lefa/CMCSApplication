@{
    ViewData["Title"] = "Upload Supporting Documents";
}

<div class="container py-4">
    <h1 class="mb-3">Upload Supporting Documents</h1>
    <p class="text-muted">Attach supporting files to your submitted claims below.</p>

    @if (TempData["UploadMessage"] != null)
    {
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            @TempData["UploadMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Upload" asp-controller="Lecturer" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label fw-semibold">Select Claim</label>
                    <select name="claimId" class="form-select" required>
                        <option value="">-- Select Claim --</option>
                        @foreach (var claim in ViewBag.Claims)
                        {
                            <option value="@claim.Id">
                                @claim.Month - Claim #@claim.Id (@claim.Status)
                            </option>
                        }
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Choose File</label>
                    <input type="file" name="file" class="form-control" required />
                    <div class="form-text">Accepted formats: PDF, DOCX, XLSX (Max 5MB)</div>
                </div>

                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-upload"></i> Upload
                </button>
                <a asp-controller="Lecturer" asp-action="Index" class="btn btn-outline-secondary ms-2">Back</a>
            </form>
        </div>
    </div>

    @* Optional: show recently uploaded documents *@
    @if (ViewBag.Claims != null && ViewBag.Claims.Count > 0)
    {
        <div class="mt-5">
            <h5 class="fw-bold">Recent Uploaded Claims</h5>
            <table class="table table-bordered table-striped mt-3">
                <thead class="table-light">
                    <tr>
                        <th>Claim ID</th>
                        <th>Month</th>
                        <th>Status</th>
                        <th>File</th>
                        <th>Date Submitted</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var claim in ViewBag.Claims)
                    {
                        <tr>
                            <td>@claim.Id</td>
                            <td>@claim.Month</td>
                            <td>@claim.Status</td>
                            <td>
                                @if (!string.IsNullOrEmpty(claim.SupportingDocument))
                                {
                                    <a href="~/uploads/@claim.SupportingDocument" target="_blank">
                                        @claim.OriginalFileName
                                    </a>
                                }
                                else
                                {
                                    <span class="text-muted">No file</span>
                                }
                            </td>
                            <td>@claim.DateSubmitted.ToShortDateString()</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
