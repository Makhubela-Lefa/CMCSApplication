@model IEnumerable<CMCSApplication.Models.Claim>

@{
    ViewData["Title"] = "Lecturer Dashboard";
}

<div class="container py-4">
    <h1 class="mb-3">Lecturer Dashboard</h1>
    <p class="text-muted">Welcome to your dashboard. Use the options below to manage your claims.</p>

    <!-- Home button -->
    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary rounded-pill shadow-sm mb-4">
        🏠 Home
    </a>

    <div class="row g-4">
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Submit Claim</h5>
                    <p class="card-text">Start a new monthly claim.</p>
                    <a class="btn btn-primary mt-auto" asp-controller="Lecturer" asp-action="Submit">Open</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Upload Documents</h5>
                    <p class="card-text">Attach supporting files for your claim.</p>
                    <a class="btn btn-outline-primary mt-auto" asp-controller="Lecturer" asp-action="Upload">Open</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">My Claims</h5>
                    <p class="card-text">View previously submitted claims and statuses.</p>
                    <a class="btn btn-outline-primary mt-auto" asp-controller="Lecturer" asp-action="MyClaims">Open</a>
                </div>
            </div>
        </div>
    </div>

    <hr class="my-4" />

    <h5 class="mb-3">Recent Claims</h5>

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Month</th>
                        <th>Hours</th>
                        <th>Hourly Rate</th>
                        <th>Total Amount</th>
                        <th>Status</th>
                        <th>Date Submitted</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var claim in Model.OrderByDescending(c => c.DateSubmitted).Take(5))
                    {
                        <tr>
                            <td>@claim.Month</td>
                            <td>@claim.HoursWorked</td>
                            <td>R @claim.HourlyRate</td>
                            <td>R @claim.TotalAmount</td>
                            <td>
                                @if (claim.Status == "Approved")
                                {
                                    <span class="badge bg-success">Approved</span>
                                }
                                else if (claim.Status == "Rejected")
                                {
                                    <span class="badge bg-danger">Rejected</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">@claim.Status</span>
                                }
                            </td>
                            <td>@claim.DateSubmitted.ToString("dd MMM yyyy")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p class="text-muted">No claims submitted yet.</p>
    }
</div>
