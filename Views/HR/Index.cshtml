@model IEnumerable<CMCSApplication.Models.User>
@{
    ViewData["Title"] = "HR Dashboard";
}

<a class="btn btn-outline-secondary w-100 mt-2"
   asp-controller="Department" asp-action="Index">
    Department Rates
</a>

<a class="btn btn-outline-success w-100"
   asp-controller="HR" asp-action="Invoice">
    Generate Invoices
</a>


<div class="container py-4">

    <h2 class="fw-bold mb-4">HR Dashboard</h2>

    <div class="row g-4 mb-4">

        <!-- Manage Users -->
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">User Accounts</h5>
                    <p class="card-text">Add, edit and delete system users.</p>
                    <a class="btn btn-primary w-100 mb-2" asp-controller="HR" asp-action="Create">
                        Add New User
                    </a>
                    <a class="btn btn-outline-primary w-100" asp-controller="HR" asp-action="Index">
                        View All Users
                    </a>
                </div>
            </div>
        </div>
        
        <!-- Manage Lecturers -->
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">Lecturer Profiles</h5>
                    <p class="card-text">
                        Edit lecturer information such as name, surname,
                        department and hourly rate.
                    </p>
                    <a class="btn btn-secondary w-100" asp-controller="Lecturer" asp-action="ManageLecturers">
                        Manage Lecturers
                    </a>
                </div>
            </div>
        </div>

        <!-- All Claims -->
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">Claims Overview</h5>
                    <p class="card-text">View all claims submitted across the system.</p>
                    <a class="btn btn-dark w-100" asp-controller="HR" asp-action="ViewClaims">
                        View All Claims
                    </a>
                </div>
            </div>
        </div>

    </div>

    <!-- Display Users in Table -->
    <div class="card shadow-sm">
        <div class="card-header bg-dark text-white">
            <h5 class="mb-0">All Users</h5>
        </div>

        <div class="card-body p-0">
            <table class="table table-striped table-bordered mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>Name</th>
                        <th>Surname</th>
                        <th>Username</th>
                        <th>Role</th>
                        <th>Department</th>     
                        <th>Hourly Rate</th>
                        <th></th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.Name</td>
                            <td>@user.Surname</td>
                            <td>@user.Username</td>
                            <td>@user.Role</td>
                            <td>
                                @(user.Department != null ? user.Department.Name : "—")
                            </td>
                            <td>@(user.HourlyRate.HasValue ? $"R {user.HourlyRate}" : "—")</td>
                            <td>
                                <a class="btn btn-sm btn-outline-secondary"
                                   asp-action="Details" asp-route-id="@user.Id">Details</a>
                                <a class="btn btn-sm btn-outline-primary"
                                   asp-action="Edit" asp-route-id="@user.Id">Edit</a>
                                <a class="btn btn-sm btn-outline-danger"
                                   asp-action="Delete" asp-route-id="@user.Id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>

</div>
