@model CMCSApplication.Models.User

@{
    ViewData["Title"] = "Delete User";
}

<div class="container py-4">
    <h2 class="mb-4 text-danger">Delete User</h2>

    <div class="alert alert-warning">
        <strong>Warning:</strong> This action cannot be undone.<br />
        The user <strong>@Model.Name @Model.Surname</strong> will be removed.
        @if (Model.Role == "Lecturer")
        {
            <div class="mt-2">
                This will also delete the linked lecturer profile.
            </div>
        }
    </div>

    <form asp-action="Delete" method="post" class="mt-3">
        <input type="hidden" asp-for="Id" />

        <button type="submit" class="btn btn-danger">Yes, delete</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
    </form>
    <a asp-controller="[ROLE]" asp-action="Index"
       class="btn btn-outline-primary rounded-pill shadow-sm mb-3">
        ⬅ Back to Dashboard
    </a>

</div>
