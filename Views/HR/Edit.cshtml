@model CMCSApplication.Models.User
@using System.Text.Json

@{
    ViewData["Title"] = "Edit User";

    var departments = ViewBag.Departments as List<CMCSApplication.Models.Department>
                      ?? new List<CMCSApplication.Models.Department>();

    var deptJson = JsonSerializer.Serialize(departments);
}

<div class="container py-4">
    <h2 class="mb-4">Edit User</h2>

    <form asp-controller="HR" asp-action="Edit" method="post" class="card shadow-sm p-4">
        <div asp-validation-summary="All" class="text-danger mb-3"></div>

        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Password" />

        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Surname" class="form-label"></label>
            <input asp-for="Surname" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Username" class="form-label"></label>
            <input asp-for="Username" class="form-control" autocomplete="username" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Role" class="form-label"></label>
            <select asp-for="Role" class="form-select" id="roleSelect">
                <option value="Lecturer">Lecturer</option>
                <option value="Coordinator">Coordinator</option>
                <option value="Manager">Manager</option>
                <option value="HR">HR</option>
            </select>
        </div>

        <!-- Department -->
        <div class="mb-3" id="departmentContainer">
            <label class="form-label">Department</label>
            <select asp-for="DepartmentId" class="form-select" id="DepartmentId"
                    asp-items="@(new SelectList(departments, "Id", "Name", Model.DepartmentId))">
                <option value="">-- Select Department --</option>
            </select>


        </div>

        <!-- Hourly Rate -->
        <div class="mb-3" id="hourlyRateContainer">
            <label asp-for="HourlyRate" class="form-label">Hourly Rate</label>
            <input asp-for="HourlyRate" readonly class="form-control" id="hourlyRateInput" />
        </div>

        <button type="submit" class="btn btn-warning">Save Changes</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
    </form>

    <!-- HR Dashboard Back Button -->
    <a asp-controller="HR" asp-action="Index"
       class="btn btn-outline-primary rounded-pill shadow-sm mt-3">
        ⬅ Back to HR Dashboard
    </a>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {

            const role = document.getElementById("roleSelect");
            const deptContainer = document.getElementById("departmentContainer");
            const rateContainer = document.getElementById("hourlyRateContainer");

            // Razor generates: id="DepartmentId"
            const deptSelect = document.getElementById("DepartmentId");
            const rateInput = document.getElementById("hourlyRateInput");

            const departments = @Html.Raw(JsonSerializer.Serialize(departments));

            function toggleFields() {
                if (role.value === "Lecturer") {
                    deptContainer.style.display = "block";
                    rateContainer.style.display = "block";
                } else {
                    deptContainer.style.display = "none";
                    rateContainer.style.display = "none";
                    deptSelect.value = "";
                    rateInput.value = "";
                }
            }

            function updateRate() {
                const selectedId = parseInt(deptSelect.value);
                const dept = departments.find(x => x.Id === selectedId);
                rateInput.value = dept ? dept.HourlyRate : "";
            }

            toggleFields();
            updateRate();

            role.addEventListener("change", toggleFields);
            deptSelect.addEventListener("change", updateRate);
        });
    </script>
}
