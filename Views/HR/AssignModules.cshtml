@using CMCSApplication.Models.ViewModels
@model ModuleAssignmentVM


@{
    ViewData["Title"] = "Assign Modules";
}

<div class="container py-4">

    <h2 class="fw-bold mb-4">Module Assignment</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <!-- Assign Module -->
    <div class="card mb-4">
        <div class="card-header fw-bold">Assign Module to Lecturer</div>
        <div class="card-body">

            <form asp-action="AssignModule" method="post">
                <div class="row mb-3">

                    <div class="col">
                        <label class="form-label">Lecturer</label>
                        <select name="lecturerId" class="form-select" required>
                            <option value="">-- Select Lecturer --</option>

                            @foreach (var l in Model.Lecturers)
                            {
                                <option value="@l.Id">@l.Name</option>
                            }
                        </select>
                    </div>

                    <div class="col">
                        <label class="form-label">Module</label>
                        <select name="moduleId" class="form-select" required>
                            <option value="">-- Select Module --</option>

                            @foreach (var m in Model.Modules)
                            {
                                <option value="@m.Id">@m.Name</option>
                            }
                        </select>
                    </div>

                </div>

                <button class="btn btn-primary">Assign Module</button>
            </form>

        </div>
    </div>

    <!-- Add Module Inline -->
    <div class="card mb-4">
        <div class="card-header fw-bold">Add New Module</div>
        <div class="card-body">
            <form asp-action="AddModuleInline" method="post">
                <div class="input-group">
                    <input type="text" name="moduleName" class="form-control"
                           placeholder="Enter module name..." required />
                    <button class="btn btn-success">Add</button>
                </div>
            </form>
        </div>
    </div>


    <!-- Assignment List -->
    <div class="card">
        <div class="card-header fw-bold">Existing Assignments</div>

        <table class="table table-bordered table-striped mb-0">
            <thead class="table-dark">
                <tr>
                    <th>Lecturer</th>
                    <th>Module</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var a in Model.Assignments)
                {
                    <tr>
                        <td>@a.Lecturer?.Name</td>
                        <td>@a.Module?.Name</td>

                        <td>
                            <form asp-action="DeleteAssignment" method="post">
                                <input type="hidden" name="id" value="@a.Id" />
                                <button class="btn btn-sm btn-danger">Remove</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>

</div>
