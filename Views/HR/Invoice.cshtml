@model IEnumerable<CMCSApplication.Models.Lecturer>

<div class="container py-4">

    <h2 class="fw-bold mb-4">Generate Lecturer Invoice</h2>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <div class="card shadow-sm">
        <div class="card-body">

            <form method="post" asp-action="GenerateInvoice">
                <div class="mb-3">
                    <label class="form-label">Select Lecturer</label>
                    <select name="lecturerId" class="form-select" required>
                        <option value="">-- Choose Lecturer --</option>
                        @foreach (var lecturer in Model)
                        {
                            <option value="@lecturer.Id">@lecturer.Name</option>
                        }
                    </select>
                </div>

                <button class="btn btn-success w-100">Generate Invoice PDF</button>
            </form>

            <!-- HR Dashboard Back Button -->
            <a asp-controller="HR" asp-action="Index"
               class="btn btn-outline-primary rounded-pill shadow-sm mt-3">
                ⬅ Back to HR Dashboard
            </a>
        </div>
    </div>

</div>
