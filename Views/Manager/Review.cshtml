@model CMCSApplication.Models.Claim

@{
    ViewData["Title"] = "Review Claim";
}

<div class="container mt-5">
    <h2 class="mb-4 text-primary fw-bold">📋 Review Claim Details</h2>

    <!-- Back Button -->
    <a asp-controller="Manager" asp-action="Approval" class="btn btn-outline-secondary mb-3">
        ⬅ Back to Approval Queue
    </a>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <div class="card shadow-lg rounded-4">
        <div class="card-body">
            <table class="table table-hover align-middle">
                <tbody>
                    <tr>
                        <th>Lecturer Name</th>
                        <td>@Model.LecturerName</td>
                    </tr>
                    <tr>
                        <th>Department</th>
                        <td>@Model.Department</td>
                    </tr>
                    <tr>
                        <th>Month</th>
                        <td>@Model.Month</td>
                    </tr>
                    <tr>
                        <th>Total Hours</th>
                        <td>@Model.HoursWorked</td>
                    </tr>
                    <tr>
                        <th>Hourly Rate</th>
                        <td>R @Model.HourlyRate.ToString("N2")</td>
                    </tr>
                    <tr>
                        <th>Total Amount</th>
                        <td class="fw-bold text-success">R @Model.TotalAmount.ToString("N2")</td>
                    </tr>

                    <!-- NEW: Coordinator who verified -->
                    <tr>
                        <th>Verified By (Coordinator)</th>
                        <td>
                            @if (!string.IsNullOrEmpty(Model.CoordinatorId))
                            {
                                @Model.CoordinatorId
                            }
                            else
                            {
                                <span class="text-muted">Not available</span>
                            }
                        </td>
                    </tr>

                    <tr>
                        <th>Status</th>
                        <td>
                            @if (Model.Status == "Verified by Coordinator")
                            {
                                <span class="badge bg-warning text-dark">Verified (Awaiting Manager Approval)</span>
                            }
                            else if (Model.Status == "Approved by Manager")
                            {
                                <span class="badge bg-primary">Approved</span>
                            }
                            else if (Model.Status == "Rejected by Manager")
                            {
                                <span class="badge bg-danger">Rejected</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">@Model.Status</span>
                            }
                        </td>
                    </tr>

                    <tr>
                        <th>Submitted On</th>
                        <td>@Model.DateSubmitted.ToString("dd-MMM-yyyy HH:mm")</td>
                    </tr>

                    @if (!string.IsNullOrEmpty(Model.SupportingDocument))
                    {
                        <tr>
                            <th>Supporting Document</th>
                            <td>
                                <a href="~/uploads/@Model.SupportingDocument" target="_blank" class="btn btn-sm btn-outline-primary">
                                    📎 View File (@Model.OriginalFileName)
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="mt-4 text-center">
                <!-- Approve Button -->
                <form asp-action="Approve" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@Model.Id" />
                    <button type="submit" class="btn btn-success btn-lg me-2"
                            @(Model.Status.Contains("Approved") ? "disabled" : "")>
                        ✅ Approve
                    </button>
                </form>

                <!-- Reject Button -->
                <form asp-action="Reject" method="post" class="d-inline"
                      onsubmit="return confirm('Are you sure you want to reject this claim?');">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@Model.Id" />
                    <button type="submit" class="btn btn-danger btn-lg"
                            @(Model.Status.Contains("Rejected") ? "disabled" : "")>
                        ❌ Reject
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
