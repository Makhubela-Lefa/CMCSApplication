@{
    ViewData["Title"] = "Manager Dashboard";
}

<div class="container py-4">
    <h1 class="mb-3">Academic Manager Dashboard</h1>

    <!-- Home button -->
    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary rounded-pill shadow-sm mb-4">
        🏠 Home
    </a>

    <div class="row g-4">
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Approve Claims</h5>
                    <p class="card-text">Final approval of claims verified by Manager.</p>
                    <a class="btn btn-primary mt-auto" asp-controller="Manager" asp-action="Approval">Open</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Reports</h5>
                    <p class="card-text">Generate and review financial claim reports.</p>
                    <a class="btn btn-outline-primary mt-auto" asp-controller="Manager" asp-action="Reports">Open</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Assign Modules</h5>
                    <p class="card-text">Allocate teaching modules to lecturers.</p>
                    <a class="btn btn-outline-primary mt-auto" asp-controller="Manager" asp-action="AssignModules">Open</a>
                </div>
            </div>
        </div>
    </div>

    <hr class="my-4" />

    <h5 class="mb-3">Recent Claims</h5>
    <div class="table-responsive">
        <table class="table table-striped align-middle">
            <thead>
                <tr>
                    <th>Ref #</th>
                    <th>Lecturer</th>
                    <th>Module</th>
                    <th>Month</th>
                    <th>Coordinator Status</th>
                    <th>Manager Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var claim in ViewBag.RecentClaims)
                {
                    <tr>
                        <td>CLM-@claim.Id</td>
                        <td>@claim.LecturerName</td>
                        <td>@claim.Module?.Name ?? "-"</td>
                        <td>@claim.Month</td>
                        <td>
                            <span class="badge @(claim.CoordinatorStatus == "Verified" ? "bg-success" :
                                                                                     claim.CoordinatorStatus == "Rejected" ? "bg-danger" : "bg-secondary")">
                            @claim.CoordinatorStatus
                        </span>
                    </td>
                    <td>
                        <span class="badge @(claim.ManagerStatus == "Approved" ? "bg-primary" :
                                                                                 claim.ManagerStatus == "Rejected" ? "bg-danger" : "bg-warning text-dark")">
                            @claim.ManagerStatus
                        </span>
                    </td>
                    <td>
                        <form asp-controller="Manager" asp-action="DeleteClaimFromIndex" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@claim.Id" />
                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this claim?');">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
                                }
            </tbody>
        </table>
    </div>
</div>
