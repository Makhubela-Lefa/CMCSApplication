@{
    ViewData["Title"] = "Reports";
}

<div class="container mt-5">
    <h2 class="mb-4 text-primary fw-bold"> Monthly Claim Reports</h2>

    <!-- Back Button -->
    <a asp-action="Index" asp-controller="Manager" class="btn btn-outline-secondary mb-3 rounded-pill">
         Back
    </a>

    <div class="row g-4">
        <!-- Summary Report Card -->
        <div class="col-md-6">
            <div class="card shadow-lg rounded-4 border-0">
                <div class="card-body">
                    <h5 class="card-title fw-bold">Summary Report</h5>
                    <p>Total Claims: <span class="fw-semibold text-success">@ViewBag.TotalClaims</span></p>
                    <p>Total Payout: <span class="fw-semibold text-success">R @(ViewBag.TotalPayout.ToString("N2"))</span></p>
                    <p>Total Hours Worked: <span class="fw-semibold text-success">@ViewBag.TotalHours</span></p>
                    <a asp-action="DownloadReportPdf"
                       asp-controller="Manager"
                       class="btn btn-outline-primary btn-sm rounded-pill">
                        Download PDF
                    </a>

                </div>
            </div>
        </div>

        <!-- Department Breakdown Card -->
        <div class="col-md-6">
            <div class="card shadow-lg rounded-4 border-0">
                <div class="card-body">
                    <h5 class="card-title fw-bold">Department Breakdown</h5>
                    <ul class="list-group">
                        @foreach (var dept in ViewBag.DepartmentTotals)
                        {
                            <li class="list-group-item d-flex justify-content-between">
                                <span>@dept.Department</span>

                                <span>
                                    <span class="fw-bold">R @(dept.TotalAmount.ToString("N2"))</span>
                                    <span class="text-muted ms-2">(@dept.TotalHours hrs)</span>
                                </span>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
