@model CMCSApplication.Models.Claim

@{
    ViewData["Title"] = "Edit Claim";
}

<div class="container mt-5">
    <h2 class="fw-bold text-primary mb-4">✏️ Edit Claim</h2>

    <a asp-controller="Manager" asp-action="Approval" class="btn btn-outline-secondary mb-3">
        ⬅ Back to Approval Queue
    </a>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <div class="card shadow-lg rounded-4">
        <div class="card-body">

            <form asp-action="EditClaim" method="post">
                @Html.AntiForgeryToken()

                <input type="hidden" asp-for="Id" />

                <div class="row g-3">

                    <!-- Lecturer Dropdown -->
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Lecturer</label>
                        <select asp-for="LecturerId"
                                class="form-select"
                                asp-items="@(new SelectList(ViewBag.Lecturers, "Id", "Name"))">
                            <option value="">-- Select Lecturer --</option>
                        </select>
                        <span asp-validation-for="LecturerId" class="text-danger"></span>
                    </div>

                    <!-- Lecturer Name -->
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Lecturer Name</label>
                        <input asp-for="LecturerName" class="form-control" />
                        <span asp-validation-for="LecturerName" class="text-danger"></span>
                    </div>

                    <!-- Department -->
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Department</label>
                        <input asp-for="Department" class="form-control" />
                        <span asp-validation-for="Department" class="text-danger"></span>
                    </div>

                    <!-- Month -->
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Month</label>
                        <input asp-for="Month" class="form-control" />
                        <span asp-validation-for="Month" class="text-danger"></span>
                    </div>

                    <!-- Hours Worked -->
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Hours Worked</label>
                        <input asp-for="HoursWorked" class="form-control" type="number" min="1" max="180" />
                        <span asp-validation-for="HoursWorked" class="text-danger"></span>
                    </div>

                    <!-- Hourly Rate -->
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Hourly Rate (R)</label>
                        <input asp-for="HourlyRate" class="form-control" type="number" step="0.01" />
                        <span asp-validation-for="HourlyRate" class="text-danger"></span>
                    </div>

                    <!-- Module Dropdown -->
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Module</label>
                        <select asp-for="ModuleId"
                                class="form-select"
                                asp-items="@(new SelectList(ViewBag.Modules, "Id", "Name"))">
                            <option value="">-- Select Module --</option>
                        </select>
                        <span asp-validation-for="ModuleId" class="text-danger"></span>
                    </div>

                    <!-- Notes -->
                    <div class="col-md-12">
                        <label class="form-label fw-bold">Notes</label>
                        <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Notes" class="text-danger"></span>
                    </div>
                </div>

                <!-- Save Button -->
                <div class="mt-4 text-center">
                    <button type="submit" class="btn btn-primary btn-lg px-4">
                        💾 Save Changes
                    </button>
                </div>

            </form>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
