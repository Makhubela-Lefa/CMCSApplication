@model IEnumerable<CMCSApplication.Models.Claim>
@{
    ViewData["Title"] = "Final Claim Approvals";
}

<div class="container mt-5">
    <h2 class="mb-4 text-primary fw-bold">✅ Final Claim Approvals</h2>

    <a asp-action="Index" asp-controller="Manager" class="btn btn-outline-secondary mb-3">
        ⬅ Back to Dashboard
    </a>

    @if (!Model.Any())
    {
        <div class="alert alert-info">No verified claims awaiting approval.</div>
    }
    else
    {
        <div class="card shadow-lg rounded-4">
            <div class="card-body">
                <table class="table table-hover align-middle">
                    <thead class="table-primary">
                        <tr>
                            <th>Lecturer</th>
                            <th>Month</th>
                            <th>Total Hours</th>
                            <th>Amount</th>
                            <th>Status</th>
                            <th class="text-center">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var claim in Model)
                        {
                            <tr>
                                <td>@claim.LecturerName</td>
                                <td>@claim.Month</td>
                                <td>@claim.HoursWorked</td>
                                <td>R @claim.TotalAmount.ToString("N2")</td>
                                <td><span class="badge bg-info">@claim.Status</span></td>
                                <td class="text-center">
                                    <a asp-action="Review" asp-route-id="@claim.Id" class="btn btn-sm btn-primary">
                                        Review
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>
