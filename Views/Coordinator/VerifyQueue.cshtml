@model List<CMCSApplication.Models.Claim>

@{
    ViewData["Title"] = "Verify Queue";
}

<div class="container mt-5">
    <h2 class="mb-4 text-primary fw-bold">⏳ Claims Awaiting Verification</h2>

    <!-- Back Button -->
    <a asp-action="Index" asp-controller="Coordinator" class="btn btn-secondary mb-3">
        <i class="bi bi-arrow-left"></i> Back
    </a>

    <!-- Success & Error Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <div class="card shadow-lg rounded-4">
        <div class="card-body">
            <table class="table table-bordered table-striped align-middle">
                <thead class="table-primary">
                    <tr>
                        <th>Lecturer</th>
                        <th>Department</th>
                        <th>Month</th>
                        <th>Total Hours</th>
                        <th>Submitted On</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var claim in Model)
                    {
                        <tr>
                            <td>@claim.LecturerName</td>
                            <td>@claim.Department</td>
                            <td>@claim.Month</td>
                            <td>@claim.HoursWorked</td>
                            <td>@claim.DateSubmitted.ToString("dd-MMM-yyyy")</td>
                            <td class="text-center">
                                <!-- Approve Button -->
                                <form asp-action="Approve" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@claim.Id" />
                                    <button type="submit" class="btn btn-sm btn-success me-1">
                                        <i class="bi bi-check-circle"></i> Approve
                                    </button>
                                </form>

                                <!-- Reject Button -->
                                <form asp-action="Reject" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to reject this claim?');">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@claim.Id" />
                                    <button type="submit" class="btn btn-sm btn-danger">
                                        <i class="bi bi-x-circle"></i> Reject
                                    </button>
                                </form>

                                <!-- Optional: Review Button -->
                                <a asp-action="Review" asp-route-id="@claim.Id" class="btn btn-sm btn-outline-primary ms-1">
                                    <i class="bi bi-eye"></i> Review
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            @if (!Model.Any())
            {
                <p class="text-muted text-center mt-3">No claims pending verification.</p>
            }
        </div>
    </div>
</div>
