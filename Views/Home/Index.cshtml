@{
    ViewData["Title"] = "Home";

    var username = Context.Session.GetString("Username");
    var role = Context.Session.GetString("Role");
}

<div class="container py-4">

    <!-- HERO -->
    <div class="p-5 mb-4 rounded-3 hero-banner">
        <div class="container-fluid py-5 text-light">

            <!-- Image -->
            <img src="data:image/jpeg;base64,"
                 alt="CMCS Banner"
                 class="img-fluid rounded mb-3"
                 style="max-height:250px; object-fit:cover; width:100%;" />


            <h1 class="display-5 fw-bold">Contract Monthly Claim System (CMCS)</h1>
            <p class="col-md-8 fs-5">
                A simple, streamlined way for Independent Contractor lecturers to submit monthly claims
                and for coordinators/managers to verify and approve.
            </p>

            @* LOGGED OUT STATE *@

            @if (username == null)
            {
                <div class="mt-3">
                    <a class="btn btn-primary btn-lg me-2" href="/Account/Login">Login to Start</a>
                </div>
            }
            else
            {
                <!-- LOGGED IN STATE -->
                <div class="mt-3">
                    <a class="btn btn-outline-danger btn-lg text-light me-2" href="/Account/Logout">Logout</a>
                </div>
            }
        </div>
    </div>



    @* LOGGED OUT CONTENT *@

    @if (username == null)
    {
        <!-- Account Credentials -->
        <div class="card shadow-sm mb-4">
            <div class="card-header"><strong>Login Account Credentials</strong></div>
            <div class="card-body">
                <table class="table table-bordered table-striped">
                    <thead class="table-dark">
                        <tr>
                            <th>Role</th>
                            <th>Username</th>
                            <th>Password</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr><td>HR</td><td>hr1</td><td>hr1234</td></tr>
                        <tr><td>Manager</td><td>manager1</td><td>manager1234</td></tr>
                        <tr><td>Coordinator</td><td>coord1</td><td>coordinator1234</td></tr>
                        <tr><td>Lecturer</td><td>lect1</td><td>1234</td></tr>
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {

       // LOGGED IN SHORTCUTS    
        
        <h4 class="fw-bold mb-3">Welcome @username</h4>

        <div class="row g-4 mb-4">

            @* LECTURER *@
            @if (role == "Lecturer")
            {
                <div class="col-md-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">Lecturer</h5>
                            <p class="card-text">Submit and track your monthly claims.</p>
                            <div class="d-grid gap-2">
                                <a class="btn btn-primary" asp-controller="Lecturer" asp-action="Submit">Submit Claim</a>
                                <a class="btn btn-outline-primary" asp-controller="Lecturer" asp-action="MyClaims">My Claims</a>
                            </div>
                        </div>
                    </div>
                </div>
            }

            @* COORDINATOR *@
            @if (role == "Coordinator")
            {
                <div class="col-md-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">Coordinator</h5>
                            <p class="card-text">Verify and review incoming claims.</p>
                            <div class="d-grid gap-2">
                                <a class="btn btn-secondary" asp-controller="Coordinator" asp-action="VerifyQueue">Verify Queue</a>
                                <a class="btn btn-outline-secondary" asp-controller="Coordinator" asp-action="ReviewQueue">Review Claims</a>
                            </div>
                        </div>
                    </div>
                </div>
            }

            @* MANAGER *@
            @if (role == "Manager")
            {
                <div class="col-md-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">Manager</h5>
                            <p class="card-text">Approve verified claims and view reports.</p>
                            <div class="d-grid gap-2">
                                <a class="btn btn-dark" asp-controller="Manager" asp-action="Approval">Approve Claims</a>
                                <a class="btn btn-outline-dark" asp-controller="Manager" asp-action="Reports">Reports</a>
                                <a class="btn btn-outline-dark" asp-controller="Manager" asp-action="Assign">Assign Modules</a>
                            </div>
                        </div>
                    </div>
                </div>
            }

            @* HR (SUPER USER) *@
            @if (role == "HR")
            {
                <div class="col-md-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">HR</h5>
                            <p class="card-text">Full system oversight and management.</p>
                            <div class="d-grid gap-2">
                                <a class="btn btn-primary" asp-controller="HR" asp-action="Index">HR Dashboard</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

</div>
