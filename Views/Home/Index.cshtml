@{
    ViewData["Title"] = "Home";
}
<div class="container py-4">
    <!-- Hero -->
    <div class="p-5 mb-4 rounded-3 hero-banner">
        <div class="container-fluid py-5 text-light">
            <!-- Added image -->
            <img src="data:image/jpeg;base64,"
                 alt="CMCS Banner" class="img-fluid rounded mb-3" style="max-height:250px;" />

            <h1 class="display-5 fw-bold">Contract Monthly Claim System (CMCS)</h1>
            <p class="col-md-8 fs-5">
                A simple, streamlined way for Independent Contractor lecturers to submit monthly claims
                and for coordinators/managers to verify and approve.
            </p>
            <a class="btn btn-primary btn-lg me-2" asp-controller="Lecturer" asp-action="Index">Lecturer Dashboard</a>
            <a class="btn btn-outline-secondary btn-lg text-light me-2" asp-controller="Coordinator" asp-action="Index">Coordinator Dashboard</a>
            <a class="btn btn-outline-secondary btn-lg text-light me-2" asp-controller="Manager" asp-action="Index">Manager Dashboard</a>
        </div>
    </div>
</div>


    <!-- Quick role cards -->
    <div class="row g-4 mb-4">
        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Lecturer</h5>
                    <p class="card-text">Submit monthly claims, upload supporting documents, and track statuses.</p>
                    <div class="d-grid gap-2">
                        <a class="btn btn-primary" asp-controller="Lecturer" asp-action="Submit">Submit Claim</a>
                        <a class="btn btn-outline-primary" asp-controller="Lecturer" asp-action="Upload">Upload Documents</a>
                        <a class="btn btn-outline-primary" asp-controller="Lecturer" asp-action="MyClaims">My Claims</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Coordinator</h5>
                    <p class="card-text">Verify incoming claims and review details before escalation.</p>
                    <div class="d-grid gap-2">
                        <a class="btn btn-secondary" asp-controller="Coordinator" asp-action="VerifyQueue">Verify Queue</a>
                        <a class="btn btn-outline-secondary" asp-controller="Coordinator" asp-action="Review">Review Claim</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Manager</h5>
                    <p class="card-text">Approve verified claims, view reports, and assign modules.</p>
                    <div class="d-grid gap-2">
                        <a class="btn btn-dark" asp-controller="Manager" asp-action="Approval">Approve Claims</a>
                        <a class="btn btn-outline-dark" asp-controller="Manager" asp-action="Reports">Reports</a>
                        <a class="btn btn-outline-dark" asp-controller="Manager" asp-action="Assign">Assign Modules</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- How it works -->
    <div class="card shadow-sm">
        <div class="card-header">
            <strong>How it works</strong>
        </div>
        <div class="card-body">
            <ol class="mb-0">
                <li>Lecturer submits claim and uploads supporting documents.</li>
                <li>Coordinator verifies and reviews the claim details.</li>
                <li>Academic Manager approves the claim and generates reports.</li>
            </ol>
        </div>
    </div>

