@model IEnumerable<CMCSApplication.Models.Department>

@{
    ViewData["Title"] = "Departments & Rates";
}

<div class="container py-4">
    <h2 class="fw-bold mb-4">Departments & Hourly Rates</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    <div class="mb-3">
        <a asp-action="Create" class="btn btn-success">Add Department</a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-striped table-hover mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>Name</th>
                        <th class="text-end">Hourly Rate</th>
                        <th style="width: 200px;"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var d in Model)
                    {
                        <tr>
                            <td>@d.Name</td>
                            <td class="text-end">R @d.HourlyRate.ToString("N2")</td>
                            <td>
                                <a asp-action="Details" asp-route-id="@d.Id" class="btn btn-sm btn-outline-secondary">Details</a>
                                <a asp-action="Edit" asp-route-id="@d.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                                <a asp-action="Delete" asp-route-id="@d.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
